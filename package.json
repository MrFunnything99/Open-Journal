{
  "name": "openjournal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:vite\"",
    "dev:api": "tsx scripts/api-server.ts",
    "dev:vite": "vite",
    "build": "tsc && vite build",
    "build:watch": "nodemon --watch src --ext ts,js,css,html --exec \"npm run build\"",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prettier": "prettier --write .",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.0",
    "daisyui": "^4.12.2",
    "dotenv": "^16.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "globals": "^15.2.0",
    "nodemon": "^3.1.11",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.19.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.9.0",
    "vite": "^5.2.14",
    "vite-plugin-top-level-await": "^1.4.1"
  },
  "dependencies": {
    "form-data": "^4.0.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1"
  }
}
